<aside class="announcement-topbar color-{{ section.settings.color_scheme }}">
  <div class="page-width announcement-topbar__inner">

    <div class="announcement-item">
      <span class="announcement-icon">
        {{ section.settings.icon_1 }}
      </span>
      <span class="announcement-text">
        {{ section.settings.text_1 }}
      </span>
    </div>

    <span class="announcement-separator">‚Ä¢</span>

    <div class="announcement-item">
      <span class="announcement-icon">
        {{ section.settings.icon_2 }}
      </span>
      <span class="announcement-text">
        {{ section.settings.text_2 }}
      </span>
    </div>

  </div>
</aside>

{% stylesheet %}
.announcement-topbar {
  background: rgb(var(--color-background));
  color: rgb(var(--color-foreground));
  font-size: 16px;
}

.announcement-topbar__inner {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 14px;
  padding: 8px 0;
  white-space: nowrap;
}

.announcement-item {
  display: flex;
  align-items: center;
  gap: 6px;
}

.announcement-icon {
  display: flex;
  font-size: 14px;
  line-height: 1;
}

.announcement-text {
  font-weight: 800;
  
}

.announcement-separator {
  opacity: 0.6;
}

/* Mobile */
@media (max-width: 749px) {
  .announcement-topbar {
    font-size: 12px;
  }
}
{% endstylesheet %}

